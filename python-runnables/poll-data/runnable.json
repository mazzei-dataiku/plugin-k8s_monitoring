{
    "meta": {
        "label": "Poll K8S Data",
        "description": "Logic to connect to the local cluster and poll the data",
        "icon": "fas fa-stream"
    },
    "impersonate": false,
    // ------------------- PARAMS ----------------------------------------------------------------------
    "params": [
        {
            "name": "sep1",
            "label": "Cloud Provider",
            "type": "SEPARATOR"
        },
                {
  "type": "STRING",
  "name": "cluster_name",
  "label": "K8S Cluster Name",
  "defaultValue": "",
            "mandatory": true
},
          {
      "name": "cluster_type",
      "label": "Cluster Type",
      "type": "SELECT",
      "selectChoices" : [
          { "value": "AWS", "label": "AWS EKS"},
          { "value": "AZURE", "label": "Azure AKS"},
          { "value": "GCP", "label": "Google GKE"}
      ],
      "mandatory": true
  },
        // ------------------- AWS ----------------------------------------------------------------------
          {
      "name": "aws_region",
      "label": "AWS Region",
      "type": "STRING",
      "visibilityCondition": "model.cluster_type == 'AWS'"
  },
        // ------------------- GCP ----------------------------------------------------------------------
          {
      "name": "gcp_project_id",
      "label": "GCP Project ID",
      "type": "STRING",
      "visibilityCondition": "model.cluster_type == 'GCP'"
  },
                  {
      "name": "gcp_zone",
      "label": "GCP Zone",
      "type": "STRING",
      "visibilityCondition": "model.cluster_type == 'GCP'"
  }
    ],
    // ------------------- RETURN ----------------------------------------------------------------------
    "permissions": [],
    "resultType": "HTML",
    "resultLabel": "Kubernetes Data Poll",
    "extension": "txt",
    "mimeType": "text/plain",
    "macroRoles": []
}
